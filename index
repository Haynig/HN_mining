                { question: "Toncoin (TON) qanday ishlaydi?", options: ["A: Hisoblash quvvati", "B: Tarmoq xavfsizligi uchun garov", "C: Ma'lumotlarni saqlash", "D: To'g'ridan-to'g'ri foydalanilmaydi"], answer: "b" },
                { question: "TON blockchain'ining asosiy valyutasi nima?", options: ["A: BTC", "B: ETH", "C: TON", "D: USD"], answer: "c" }
                // ... qo'shimcha savollarni qo'shing (jamisi kamida 100 ta bo'lishi kerak)
            ];
            loadQuestion();
